<font color="#a020f0">#include </font><font color="#ff00ff">&lt;iostream&gt;</font>
<font color="#a020f0">#include </font><font color="#ff00ff">&lt;iomanip&gt;</font>
<font color="#804040"><b>using</b></font> <font color="#2e8b57"><b>namespace</b></font> std;
<font color="#2e8b57"><b>int</b></font> main ()
{
    <font color="#2e8b57"><b>int</b></font> dividend, divisor;

    cout &lt;&lt; <font color="#ff00ff">&quot;Demonstration of the integer division operators:</font><font color="#6a5acd">\n\n</font><font color="#ff00ff">&quot;</font>;
    <font color="#804040"><b>for</b></font> (;;)
    {
        cout &lt;&lt; <font color="#ff00ff">&quot;Enter a signed integer DIVIDEND &quot;</font>
             &lt;&lt; <font color="#ff00ff">&quot;(&lt;EOF&gt;[^D] to stop): &quot;</font>;
        <font color="#804040"><b>if</b></font> (!(cin  &gt;&gt; dividend))
            <font color="#804040"><b>break</b></font>;
        cout &lt;&lt; endl;
        cout &lt;&lt; <font color="#ff00ff">&quot;Enter a signed integer DIVISOR: &quot;</font>
             &lt;&lt; <font color="#ff00ff">&quot;(&lt;EOF&gt;[^D] to stop): &quot;</font>;
        <font color="#804040"><b>if</b></font> (!(cin  &gt;&gt; divisor))
            <font color="#804040"><b>break</b></font>;
        cout &lt;&lt; endl;
        cout &lt;&lt; endl;
        cout &lt;&lt; dividend &lt;&lt; <font color="#ff00ff">&quot; / &quot;</font> &lt;&lt; divisor &lt;&lt; <font color="#ff00ff">&quot; --&gt; &quot;</font> &lt;&lt; (dividend / divisor)
             &lt;&lt; <font color="#ff00ff">&quot; &amp; &quot;</font>
             &lt;&lt; dividend &lt;&lt; <font color="#ff00ff">&quot; % &quot;</font> &lt;&lt; divisor &lt;&lt; <font color="#ff00ff">&quot; --&gt; &quot;</font> &lt;&lt; (dividend % divisor)
             &lt;&lt; endl &lt;&lt; endl;
    }
    <font color="#804040"><b>return</b></font> <font color="#ff00ff">0</font>;
}
