<I><FONT COLOR="#B22222">/*
   SCSU CSCI 201 Lab 4 Demo program
   Converting from 8 bit binary to decimal
   A. A. Anda
*/</FONT></I>
#<B><FONT COLOR="#5F9EA0">include</FONT></B> <FONT COLOR="#BC8F8F"><B>&lt;iostream&gt;</FONT></B>
#<B><FONT COLOR="#5F9EA0">include</FONT></B> <FONT COLOR="#BC8F8F"><B>&lt;iomanip&gt;</FONT></B>
using namespace std;

<FONT COLOR="#228B22"><B>int</FONT></B> <B><FONT COLOR="#0000FF">main</FONT></B>()
{
    <I><FONT COLOR="#B22222">// Local declarations
</FONT></I>    <FONT COLOR="#228B22"><B>int</FONT></B> binary_in;
    <FONT COLOR="#228B22"><B>int</FONT></B> decimal_out = 0;
    <FONT COLOR="#228B22"><B>int</FONT></B> place_value = 1;

    cout &lt;&lt; <FONT COLOR="#BC8F8F"><B>&quot;Enter a binary number of up to 8 contiguous digits&quot;</FONT></B> &lt;&lt; endl;
    cin &gt;&gt; binary_in;

    <FONT COLOR="#228B22"><B>int</FONT></B> bit0 = binary_in % 10;
    decimal_out += bit0 * place_value;
    binary_in /= 10;
    place_value *= 2;
    
    <FONT COLOR="#228B22"><B>int</FONT></B> bit1 = binary_in % 10;
    decimal_out += bit1 * place_value;
    binary_in /= 10;
    place_value *= 2;
    
    <FONT COLOR="#228B22"><B>int</FONT></B> bit2 = binary_in % 10;
    decimal_out += bit2 * place_value;
    binary_in /= 10;
    place_value *= 2;
    
    <FONT COLOR="#228B22"><B>int</FONT></B> bit3 = binary_in % 10;
    decimal_out += bit3 * place_value;
    binary_in /= 10;
    place_value *= 2;
    
    <FONT COLOR="#228B22"><B>int</FONT></B> bit4 = binary_in % 10;
    decimal_out += bit4 * place_value;
    binary_in /= 10;
    place_value *= 2;
    
    <FONT COLOR="#228B22"><B>int</FONT></B> bit5 = binary_in % 10;
    decimal_out += bit5 * place_value;
    binary_in /= 10;
    place_value *= 2;
    
    <FONT COLOR="#228B22"><B>int</FONT></B> bit6 = binary_in % 10;
    decimal_out += bit6 * place_value;
    binary_in /= 10;
    place_value *= 2;
    
    <FONT COLOR="#228B22"><B>int</FONT></B> bit7 = binary_in % 10;
    decimal_out += bit7 * place_value;

    cout &lt;&lt; endl;
    cout &lt;&lt; <FONT COLOR="#BC8F8F"><B>&quot;The binary number &quot;</FONT></B>;
    cout &lt;&lt; setw(1) &lt;&lt; bit7
         &lt;&lt; setw(1) &lt;&lt; bit6
         &lt;&lt; setw(1) &lt;&lt; bit5
         &lt;&lt; setw(1) &lt;&lt; bit4
         &lt;&lt; setw(1) &lt;&lt; bit3
         &lt;&lt; setw(1) &lt;&lt; bit2
         &lt;&lt; setw(1) &lt;&lt; bit1
         &lt;&lt; setw(1) &lt;&lt; bit0
         &lt;&lt; <FONT COLOR="#BC8F8F"><B>&quot; has the decimal value &quot;</FONT></B> &lt;&lt; decimal_out
         &lt;&lt; endl;
    
    <B><FONT COLOR="#A020F0">return</FONT></B> 0;
}
